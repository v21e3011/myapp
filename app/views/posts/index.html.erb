<h2>
    <%= link_to 'Add New', new_post_path, class: 'hedder-menu' %>
    My Post
</h2>
<ul>
    <%#= @posts %>
    <% @posts.each do |post| %>
        <li>
            <%= link_to post.title, post_path(post) %>
        </li>
    <% end %>
</ul>

<%= form_for :post, url: posts_path do |f| %>
<p>
    <%= f.text_field :title, placeholder: 'enter title' %>
</p>
<p>
    <%= f.text_area :body, placeholder: 'enter body text' %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>